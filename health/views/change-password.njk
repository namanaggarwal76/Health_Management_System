{% extends "layout.njk" %}

{% block content %}
  <div class="form-container">
    <h2>Change Password</h2>
    {% if error %}
      <p style="color: red;">{{ error }}</p>
    {% endif %}
    <form method="POST" action="/client/change-password">
      <input type="hidden" name="room_no" value="{{ room_no or '' }}">
      <div class="form-group">
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" required>
      </div>
      <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" required>
      </div>
      <div class="form-actions">
        <a href="/client/room/{{ room_no }}" class="button secondary">Cancel</a>
        <button type="submit" class="button primary">Change Password</button>
      </div>
    </form>
  </div>
{% endblock %}
